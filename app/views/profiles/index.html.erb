<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= form_tag(profiles_path, method: :get) do %>  
  <%= text_field_tag :term, params[:term], :placeholder => "Procure por nomes..",:class => "busca-input" %>
  <%= submit_tag 'Encontrar', name: nil,:class => "busca-submit" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if current_user.adm == true %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', profile_path(user.id) %></td>
        <% if current_user.adm == true %>
          <td><%= link_to 'Edit', edit_user_registration_path(user.id) %></td>
          <td><%= link_to 'Destroy', destroy_profile_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if params[:term] %>
  <%= link_to "Back", profiles_path%>
<% end %>
<%= will_paginate @users %>

<br>
